<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %>
</head>

<body>
    <% include ../partials/nav.ejs %>
    <%if(error==1){%>
      <script>alert("Register Successful!");</script>
    <%}%>
    <%if(error==2){%>
      <script>alert("Session Invalid!\nPlease login again!");</script>
    <%}%>
    <%if(error==3){%>
      <script>alert("Email or password wrong!\nPlease try again!");</script>
    <%}%>
        <div class="container">
          <div class="row">
         
          <div class="col-lg"></div>
          <form class="card col-lg-6 shadow-lg mt-5 p-5" style="border-radius:15px" action="/login-button" method="post" >
            <div class="row justify-content-md-center">
                  <h2 style="font-size:40px;">Account Login</h2><br>
            </div>

            <div class="form-group row">
              <label><b>Email</b></label>
              <input class="form-control" type="name" name="email" required>
            </div>  

            <div class="form-group row">
              <label><b>Password</b></label>
              <input class="form-control" type="password" name="password" required>
            </div>

            <div class="row mt-5">
              <div class="col-md"></div>
              <div class="col-md text-center">
                  <button  class="form-control btn-primary px-4 py-2" id="login-button" type="submit" >Login</button>
              </div>
              <div class="col-md"></div>
            </div>
            
            <div class="row mt-3">
              <div class="col-md text-center">
                <a href="/register">Not a member? Sign up here!</a>
              </div>
            </div>
          </form>

          <div class="col-lg"></div>
        </div>
          
        </div>

  </body>
</html>
