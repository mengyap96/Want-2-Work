<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %>
</head>

<body>
    <% include ../partials/nav.ejs %>
    <%if(error==1){%>
      <script>alert("This email has been registered!\nPlease try again!");</script>
    <%}%>
      
    <script language="JavaScript">
        function confirmPassword(){
          if(document.myForm.password.value != document.myForm.password2.value){
              alert("Password not match!\nPlease try again!");
              document.myForm.password.value="";
              document.myForm.password2.value="";
              return false;
          }
          else{
              return true;
          }
        }

        function checkSpam(name,address,phone){
            if(Number.isInteger(Number(name))){
              alert('Your company name cannot be number only!');
              return false;
            }else if(Number.isInteger(Number(address))){
            alert('Your address cannot be number only!');
            return false;
            }else if(!Number.isInteger(Number(phone))){
              alert('Your phone can only consist of number!');
              return false;
            }
            else{
              return true;
          }
        }
    </script>
    <div class="container">
        <div class="row">
          <div class="col-lg"></div>
    
        <form class="card col-lg-6 shadow-lg my-5 p-5" style="border-radius: 15px;" action="/register-company-button" method="post" name="myForm" onsubmit="if(checkSpam(this.name.value,this.address.value,this.phone.value)){return confirmPassword();}else{return false;}" >
            <div class="row justify-content-md-center">
              <h2 style="font-size:40px;">Company Registration</h2><br>
            </div>

            <div class="form-group row">
              <label>Email</label>
              <input class="form-control" type="email" name="email" required>
            </div>  
            

            <div class="form-group row">
              <label>Password</label><br>
              <input class="form-control" type="password" name="password" required>
            </div>

            <div class="form-group row">
              <label>Confirm Password</label><br>
              <input class="form-control" type="password" name="password2" required>
            </div>

            <div class="form-group row">
              <label>Company Name</label><br>
              <input class="form-control" type="name" name="name" required>
            </div>

            <div class="form-group row">
              <label>Company Phone</label><br>
              <input class="form-control" type="text" name="phone" required>
            </div>

            <div class="form-group row ">
              <label>Address</label><br>
              <textarea class="form-control" type="text" name="address" required></textarea>
            </div>

            <div class="form-group row">
                <div class="checkbox">
                    <label><input type="checkbox" value="" required> I have agreed to the terms and conditions.</label>
                  </div>
            </div>

            <div class="row mt-2">
                <div class="col-md"></div>
              <div class="col-md text-center">
                  <button class="form-control btn-primary m-2 px-4 py-2" style="font-family: 'Times New Roman', Times, serif; font-size:25px; border-radius: 40px; border-color:#4c96d7; background-color:#4c96d7" type="submit" >Register</button>
              </div>
              <div class="col-md text-center">
                  <a href="/login" class="btn form-control m-2 px-4 py-2" id="cancel-button" type="submit" >Cancel</a>
              </div>
              <div class="col-md"></div>
            </div>
            
          </form>
          <div class="col-lg"></div>
        </div>
      </div>

</body>
</html>